@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="mt-4 p-5 bg-primary text-white rounded">
    <h1>CBS Capability Tracker</h1>
    <p class="lead">Capabilitites Tracking Application For Software Engineers</p>
</div>

<div class="row-cols-auto > *">
    <div class=".col-sm">
        <h2>Login</h2>
        <p>
            Login To Website
        </p>

        <p><a class="button" href="~/Account/Login">Login &raquo;</a></p>

    </div>
</div>

<div class=".col-sm">

    <p>____________________________________________________________________________________________________________________________</p>

</div>


<h2>User Options</h2>
<div class="row">


    <div class=".col-sm">
        <h4>Register Capability Score</h4>
        <p>
            Enter a Capability Score For A given Period
        </p>
        <p><a class="button" href="~/ScoreSubmissionForm">Enter Score &raquo;</a></p>
    </div>
    <div class=".col-sm">
        <h4>View Your Capability Previous Score</h4>
        <p>
            View Your Capability Submissions For A Given Period
        </p>
        <p><a class="button" href="~/Scores/ListUserScores/">View User List &raquo;</a></p>
    </div>



</div>

<div class="row">

    <p>____________________________________________________________________________________________________________________________</p>

</div>




<h2>Admin Options</h2>
<div class="row">

    <div class=".col-sm">

        <h4>View Capabilities</h4>

        <p>Table view of all registered capabilities. </p>
        <p><a class="button" href="~/Capabilities/ListCapabilities">View Capabilities &raquo;</a></p>
    </div>
    <div class=".col-sm">
        <h4>View Registered Users</h4>
        <p>
            Table view of all registered users to the site
        </p>
        <p><a class="button" href="~/User/ListUsers">View User List &raquo;</a></p>

    </div>
    <div class=".col-sm">
        <h4>Add New Capability</h4>
        <p>Add A New Capability to The Application </p>
        <p><a class="button" href="~/Capabilities/NewCapability">Add &raquo;</a></p>
    </div>


    <div class="row">

        <p>____________________________________________________________________________________________________________________________</p>

    </div>
</div>

